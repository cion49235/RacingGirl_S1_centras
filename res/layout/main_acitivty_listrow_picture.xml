<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:background="#ffffff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="visible">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/img_imageurl"
                android:layout_width="320dp"
                android:layout_height="400dp"
                android:scaleType="centerCrop"
                android:background="@drawable/fanroom_list_thumbnail_001" />
        </RelativeLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/layout_tvcontent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:paddingTop="10dp"
            android:gravity="center">
            <TextView
                android:id="@+id/txt_music"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="오늘도 홈페이지와주셔서 고맙습니다"
                android:textColor="#000000"/>
            <ImageButton
		        android:id="@+id/bt_favorite" 
		        android:layout_width="wrap_content" 
		        android:layout_height="wrap_content" 
		        android:src="@drawable/bt_favorite_normal"
		        android:background="@color/transparent"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>