<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="15dp"
    android:orientation="vertical"
    android:background="#f7f7f7">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
     <FrameLayout
         android:layout_width="match_parent"
         android:layout_height="250dp"
         android:background="#ffffff">
         <ImageView
             android:id="@+id/img_favorite_imageurl"
             android:layout_gravity="center"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:scaleType="centerCrop"
             android:background="@drawable/fanroom_list_thumbnail_001"/>
     </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:id="@+id/txt_favorite_music"
            android:text="팬방소개글"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:ellipsize="end"
            android:textColor="#000000"
            android:paddingLeft="5dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center">

         <Button
            android:id="@+id/bt_favorite_delete"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textColor="@drawable/btn_text_selector"
        	android:background="@drawable/btn_rounded_corner"
        	android:text="@string/txt_main_activity39"/>
    </LinearLayout>
    </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/btBottom_line"
        android:layout_width="match_parent"
        android:layout_height="5px"
        android:background="@drawable/fanroom_list_reply_line_001" />
    
</LinearLayout>