<?xml version="1.0" encoding="UTF-8"?>
<resources>
    <style name="titlebar">
        <item name="android:textSize">17.0sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Animations" />
    <style name="Animations.PopDownMenu" parent="@style/Animations" />
    <style name="Animations.PopDownMenu.Center" parent="@style/Animations.PopDownMenu">
        <item name="android:windowEnterAnimation">@anim/grow_from_top</item>
        <item name="android:windowExitAnimation">@anim/shrink_from_bottom</item>
    </style>
    <style name="Animations.PopDownMenu.Left" parent="@style/Animations.PopDownMenu">
        <item name="android:windowEnterAnimation">@anim/grow_from_topleft_to_bottomright</item>
        <item name="android:windowExitAnimation">@anim/shrink_from_bottomright_to_topleft</item>
    </style>
    <style name="Animations.PopDownMenu.Right" parent="@style/Animations.PopDownMenu">
        <item name="android:windowEnterAnimation">@anim/grow_from_topright_to_bottomleft</item>
        <item name="android:windowExitAnimation">@anim/shrink_from_bottomleft_to_topright</item>
    </style>
    <style name="Animations.PopDownMenu.Reflect" parent="@style/Animations.PopDownMenu">
        <item name="android:windowEnterAnimation">@anim/pump_top</item>
        <item name="android:windowExitAnimation">@anim/disappear</item>
    </style>
    <style name="Animations.PopUpMenu" parent="@style/Animations" />
    <style name="Animations.PopUpMenu.Center" parent="@style/Animations.PopUpMenu">
        <item name="android:windowEnterAnimation">@anim/grow_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/shrink_from_top</item>
    </style>
    <style name="Animations.PopUpMenu.Left" parent="@style/Animations.PopUpMenu">
        <item name="android:windowEnterAnimation">@anim/grow_from_bottomleft_to_topright</item>
        <item name="android:windowExitAnimation">@anim/shrink_from_topright_to_bottomleft</item>
    </style>
    <style name="Animations.PopUpMenu.Right" parent="@style/Animations.PopUpMenu">
        <item name="android:windowEnterAnimation">@anim/grow_from_bottomright_to_topleft</item>
        <item name="android:windowExitAnimation">@anim/shrink_from_topleft_to_bottomright</item>
    </style>
    <style name="Animations.PopUpMenu.Reflect" parent="@style/Animations.PopUpMenu">
        <item name="android:windowEnterAnimation">@anim/pump_bottom</item>
        <item name="android:windowExitAnimation">@anim/disappear</item>
    </style>
    <style name="NewDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>
    <style name="MediaButton">
        <item name="android:background">@drawable/media_button_background</item>
        <item name="android:layout_width">52.0dip</item>
        <item name="android:layout_height">52.0dip</item>
    </style>
    <style name="MediaButton.Menu" parent="@style/MediaButton">
        <item name="android:src">@drawable/ic_media_actionmenu</item>
    </style>
    <style name="MediaButton.Duration.Rew" parent="@style/MediaButton">
        <item name="android:src">@drawable/ic_media_duration_rew</item>
    </style>
    <style name="MediaButton.Rew" parent="@style/MediaButton">
        <item name="android:src">@drawable/ic_media_rew</item>
    </style>
    <style name="MediaButton.Play" parent="@style/MediaButton">
        <item name="android:src">@drawable/ic_media_play</item>
    </style>
    <style name="MediaButton.Ffwd" parent="@style/MediaButton">
        <item name="android:src">@drawable/ic_media_ff</item>
    </style>
    <style name="MediaButton.Duration.Ffwd" parent="@style/MediaButton">
        <item name="android:src">@drawable/ic_media_duration_ff</item>
    </style>
    <style name="seekBarStyle" parent="@android:style/Widget.SeekBar">
        <item name="android:paddingLeft">8.0dip</item>
        <item name="android:paddingRight">8.0dip</item>
        <item name="android:maxHeight">5.0dip</item>
        <item name="android:progressDrawable">@drawable/seekbar_style</item>
        <item name="android:minHeight">5.0dip</item>
        <item name="android:thumb">@drawable/seek_thumb</item>
    </style>
    <style name="SpinnerCheckedSmall">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@android:color/white</item>
    </style>
    
    <style name="NotificationTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>
    <style name="titlebarRss">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="full_screen_dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>
</resources>